<mvc:View 
		xmlns:core="sap.ui.core" 
		xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="applications.UpdateEmployee" 
		xmlns:html="http://www.w3.org/1999/xhtml" 
		xmlns:l="sap.ui.layout"   
		xmlns:c="sap.ui.commons" 
		>
	
 
		       <ScrollContainer
		    height="100%"
		    width="100%"
		    horizontal="true"
		    vertical="true"
		    focusable="true">
		    
   
   
	 	 <core:Fragment fragmentName="applications.Header" type="XML" />
	
		  <l:VerticalLayout class="SapUiContentPadding" width="100%">
     
     	<l:content>
		 	<l:HorizontalLayout class="adminPage" width="100%">
				<Text id="updateEmployee" text="Update Employee : " class="HorizontalLayout"/>
		   	 </l:HorizontalLayout>
			 <l:HorizontalLayout class="layout2" width="100%">
			 	<Input width="300px" fieldWidth="60%" class="SapUiSmallMarginBottom" id = "bname" />
				<Input placeholder="new Manager"  width="300px" fieldWidth="60%" class="SapUiSmallMarginBottom" id = "manager" />
				<Input placeholder="new Id Team"  width="300px" fieldWidth="60%" class="SapUiSmallMarginBottom" id = "id_team" />
				<Button text="Submit" press="updateEmployee" type="Accept"/>
		   	 </l:HorizontalLayout>
		   	 
		</l:content>
     
      </l:VerticalLayout>
      
      
      
		</ScrollContainer>
</mvc:View>